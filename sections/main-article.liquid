{% schema %}
{
  "name": "Article Page",
  "settings": []
}
{% endschema %}

<article class="animate-fade-in max-w-3xl mx-auto px-4 py-12" itemscope itemtype="http://schema.org/BlogPosting">
    
    <div class="flex items-center space-x-2 text-sm font-medium text-gray-400 mb-12 flex-wrap">
        <a href="{{ routes.root_url }}" class="hover:text-sky-500 transition-colors">Home</a>
        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m9 18 6-6-6-6"/></svg>
        <a href="{{ blog.url }}" class="hover:text-sky-500 transition-colors">{{ blog.title }}</a>
        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m9 18 6-6-6-6"/></svg>
        <span class="text-slate-800 line-clamp-1">{{ article.title }}</span>
    </div>

    <div class="text-center mb-12">
        <div class="inline-block bg-sky-50 text-sky-600 px-4 py-1.5 rounded-full text-xs font-bold uppercase tracking-wide mb-6">
            {{ article.published_at | date: "%b %d, %Y" }}
        </div>
        <h1 class="text-4xl md:text-5xl font-bold text-slate-900 mb-8 leading-tight" itemprop="headline">{{ article.title }}</h1>
        
        <div class="flex items-center justify-center gap-3">
            <div class="w-10 h-10 bg-gray-200 rounded-full overflow-hidden">
                <img 
                    src="https://ui-avatars.com/api/?name={{ article.author | url_encode }}&background=0ea5e9&color=fff" 
                    alt="{{ article.author | escape }}" 
                    class="w-full h-full object-cover"
                    width="40"
                    height="40"
                    loading="lazy"
                >
            </div>
            <div class="text-left">
                <div class="text-sm font-bold text-slate-900" itemprop="author">{{ article.author }}</div>
                {% assign word_count = article.content | strip_html | size %}
                {% assign read_time = word_count | divided_by: 200 | plus: 1 %}
                <div class="text-xs text-gray-500">{{ read_time }} min read</div>
            </div>
        </div>
    </div>

    {% if article.image %}
        {% assign banner_url = article.image | image_url: width: 1200 %}
        <div class="aspect-video w-full overflow-hidden mb-12 rounded-3xl shadow-xl shadow-gray-200/50">
            <img 
                src="{{ banner_url }}" 
                alt="{{ article.title | escape }}" 
                class="w-full h-full object-cover"
                width="1200"
                height="675"
                loading="eager"
            >
        </div>
    {% endif %}

    <div class="prose prose-lg max-w-none text-gray-600 prose-headings:font-bold prose-headings:text-slate-900 prose-a:text-sky-500 prose-img:rounded-2xl" itemprop="articleBody">
        {{ article.content }}
    </div>

    <div class="mt-16 pt-8 border-t border-gray-100 text-center">
        <a href="{{ blog.url }}" class="inline-flex items-center gap-2 text-sky-500 font-bold hover:text-sky-600 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m15 18-6-6 6-6"/></svg>
            Back to {{ blog.title }}
        </a>
    </div>

</article>