{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "badge_text",
      "label": "Badge Text",
      "default": "Season 4 Collection"
    },
    {
      "type": "text",
      "id": "title_part_1",
      "label": "Title Start",
      "default": "Elevate Your"
    },
    {
      "type": "text",
      "id": "title_part_2",
      "label": "Title Highlighted",
      "default": "Workspace"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Premium peripherals designed for elegance, comfort, and uncompromising performance."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Shop Collection"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Hero Banner"
    }
  ]
}
{% endschema %}

<div class="relative bg-white text-slate-900 overflow-hidden min-h-[600px] flex items-center justify-center">
    <div class="absolute inset-0 bg-gradient-to-b from-sky-50 to-white"></div>
    <div class="absolute inset-0 opacity-30 bg-cover bg-center mix-blend-overlay"
         style="background-image: url('{{ section.settings.bg_image | image_url: width: 2000 | default: 'https://images.unsplash.com/photo-1550745165-9bc0b252726f?auto=format&fit=crop&q=80&w=1920' }}');">
    </div>
    
    <div class="relative z-10 text-center max-w-4xl px-4 mt-12">
        <div class="inline-flex items-center gap-2 px-4 py-2 bg-white rounded-full shadow-sm border border-gray-100 text-sky-600 text-xs font-bold uppercase tracking-wider mb-8">
            <span class="w-2 h-2 bg-sky-500 rounded-full animate-pulse"></span> {{ section.settings.badge_text }}
        </div>
        <h1 class="text-6xl md:text-7xl font-bold mb-8 tracking-tight text-slate-900 leading-[1.1]">
            {{ section.settings.title_part_1 }} <span class="text-transparent bg-clip-text bg-gradient-to-r from-sky-500 to-sky-300">{{ section.settings.title_part_2 }}</span>
        </h1>
        <p class="text-xl md:text-2xl mb-10 text-gray-500 font-light max-w-2xl mx-auto leading-relaxed">
            {{ section.settings.description }}
        </p>
        <div class="flex justify-center gap-4">
            <a href="{{ section.settings.button_link }}" class="px-6 py-3 font-medium transition-all duration-300 relative overflow-hidden group rounded-full active:scale-95 bg-sky-500 text-white hover:bg-sky-400 hover:shadow-lg hover:shadow-sky-200 shadow-xl">
                <span class="relative z-10 flex items-center justify-center gap-2">{{ section.settings.button_label }}</span>
            </a>
        </div>
    </div>
</div>