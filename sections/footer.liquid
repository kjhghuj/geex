{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "link_list",
      "id": "menu_explore",
      "label": "Explore Menu",
      "default": "footer",
      "info": "Leave empty to use default static links"
    },
    {
      "type": "link_list",
      "id": "menu_company",
      "label": "Company Menu",
      "info": "Leave empty to use default static links"
    }
  ]
}
{% endschema %}

<footer class="bg-white border-t border-gray-100 py-16">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-4 gap-12">
          
          <div class="col-span-1 md:col-span-1">
              <div class="text-2xl font-display font-bold text-slate-900 mb-6 flex items-center">
                  <span class="text-sky-500 mr-2">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="16" height="16" x="4" y="4" rx="2"/><rect width="6" height="6" x="9" y="9" rx="1"/><path d="M15 2v2"/><path d="M15 20v2"/><path d="M2 15h2"/><path d="M2 9h2"/><path d="M20 15h2"/><path d="M20 9h2"/><path d="M9 2v2"/><path d="M9 20v2"/></svg>
                  </span> 
                  {{ shop.name }}
              </div>
              <p class="text-gray-500 text-sm leading-relaxed mb-6">
                  Designing the interface between humanity and technology. 
                  Premium hardware for the modern creator.
              </p>
              <div class="flex space-x-4">
                  <a href="#" class="bg-gray-50 p-2 rounded-full text-gray-400 hover:bg-sky-50 hover:text-sky-500 transition-colors"><svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="2" width="20" height="20" rx="5" ry="5"/><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/><line x1="17.5" y1="6.5" x2="17.51" y2="6.5"/></svg></a>
                  <a href="#" class="bg-gray-50 p-2 rounded-full text-gray-400 hover:bg-sky-50 hover:text-sky-500 transition-colors"><svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 4s-.7 2.1-2 3.4c1.6 10-9.4 17.3-18 11.6 2.2.1 4.4-.6 6-2C3 15.5.5 9.6 3 5c2.2 2.6 5.6 4.1 9 4-.9-4.2 4-6.6 7-3.8 1.1 0 3-1.2 3-1.2z"/></svg></a>
                  <a href="#" class="bg-gray-50 p-2 rounded-full text-gray-400 hover:bg-sky-50 hover:text-sky-500 transition-colors"><svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"/></svg></a>
              </div>
          </div>

          <div>
              <h3 class="text-sm font-bold text-slate-900 uppercase tracking-wide mb-6">Explore</h3>
              <ul class="space-y-4 text-gray-500 text-sm">
                {% assign explore_linklist = linklists[section.settings.menu_explore] %}
                {% if explore_linklist.links.size > 0 %}
                    {% for link in explore_linklist.links %}
                      <li><a href="{{ link.url }}" class="hover:text-sky-500 transition-colors">{{ link.title }}</a></li>
                    {% endfor %}
                {% else %}
                    <li><a href="{{ routes.all_products_collection_url }}" class="hover:text-sky-500 transition-colors">All Products</a></li>
                    <li><a href="/pages/technology" class="hover:text-sky-500 transition-colors">Our Technology</a></li>
                    <li><a href="/blogs/journal" class="hover:text-sky-500 transition-colors">Journal</a></li>
                {% endif %}
              </ul>
          </div>

          <div>
              <h3 class="text-sm font-bold text-slate-900 uppercase tracking-wide mb-6">Company</h3>
              <ul class="space-y-4 text-gray-500 text-sm">
                {% assign company_linklist = linklists[section.settings.menu_company] %}
                {% if company_linklist.links.size > 0 %}
                    {% for link in company_linklist.links %}
                      <li><a href="{{ link.url }}" class="hover:text-sky-500 transition-colors">{{ link.title }}</a></li>
                    {% endfor %}
                {% else %}
                    <li><a href="/pages/about" class="hover:text-sky-500 transition-colors">About Us</a></li>
                    <li><a href="/pages/support" class="hover:text-sky-500 transition-colors">Support Center</a></li>
                    <li><a href="/policies/terms-of-service" class="hover:text-sky-500 transition-colors">Legal & Privacy</a></li>
                {% endif %}
              </ul>
          </div>

          <div>
              <h3 class="text-sm font-bold text-slate-900 uppercase tracking-wide mb-6">Stay Connected</h3>
              
              {% form 'customer', class: 'newsletter-form' %}
                <input type="hidden" name="contact[tags]" value="newsletter">
                <div class="flex bg-gray-50 p-1.5 rounded-full border border-gray-100 focus-within:ring-2 focus-within:ring-sky-100 focus-within:border-sky-300 transition-all">
                    <input 
                        type="email" 
                        name="contact[email]"
                        placeholder="email@example.com" 
                        required
                        class="flex-1 min-w-0 px-4 bg-transparent text-sm text-slate-900 placeholder:text-gray-400 outline-none"
                    >
                    <button type="submit" class="bg-sky-500 hover:bg-sky-600 text-white px-5 py-2 rounded-full text-sm font-medium transition-colors shadow-md shadow-sky-200">
                        Join
                    </button>
                </div>
                {% if form.posted_successfully? %}
                  <p class="mt-2 text-xs text-green-600">Thanks for subscribing!</p>
                {% endif %}
              {% endform %}
              
          </div>
      </div>
      
      <div class="mt-16 pt-8 border-t border-gray-100 text-center text-gray-400 text-xs">
          &copy; {{ 'now' | date: "%Y" }} {{ shop.name }}. All rights reserved.
      </div>
  </div>
</footer>