{% schema %}
{
  "name": "CTA Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Cyber Week Event"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Upgrade Your Battle Station"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text",
      "default": "Experience the pinnacle of gaming luxury. Exclusive discounts on our premium mechanical keyboards."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Access Deals"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "CTA Banner"
    }
  ]
}
{% endschema %}

<div class="max-w-7xl mx-auto px-4 mb-24 mt-20">
    <div class="bg-slate-900 rounded-[2.5rem] overflow-hidden relative py-24 px-8 md:px-20 text-center md:text-left flex flex-col md:flex-row items-center justify-between">
        <div class="absolute inset-0 bg-cover bg-center opacity-30 mix-blend-overlay"
             style="background-image: url('{{ section.settings.bg_image | image_url: width: 2000 | default: 'https://images.unsplash.com/photo-1618384887929-16ec33fab9ef?auto=format&fit=crop&q=80&w=1920' }}');">
        </div>
        <div class="absolute inset-0 bg-gradient-to-r from-slate-900 via-slate-900/80 to-transparent"></div>
        
        <div class="relative z-10 max-w-xl">
            <span class="text-sky-400 font-bold tracking-wider uppercase text-sm mb-4 block">{{ section.settings.subtitle }}</span>
            <h2 class="text-4xl md:text-5xl font-bold text-white mb-6 leading-tight">
                {{ section.settings.title }}
            </h2>
            <p class="text-slate-300 text-lg mb-8 leading-relaxed">
                {{ section.settings.text }}
            </p>
            <a href="{{ section.settings.button_link }}" class="inline-block px-6 py-3 font-medium transition-all duration-300 rounded-full active:scale-95 bg-white text-slate-900 hover:bg-sky-50 shadow-none border-none">
                {{ section.settings.button_label }}
            </a>
        </div>
    </div>
</div>